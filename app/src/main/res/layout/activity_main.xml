<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="#F5F5F5">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@android:drawable/ic_secure"
        android:layout_marginBottom="32dp"
        app:tint="#2196F3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scam Protector"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#212121"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status: Checking..."
        android:textSize="16sp"
        android:textAlignment="center"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/enableButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aktifkan Sekarang"
        android:textSize="16sp"
        android:padding="16dp"
        android:backgroundTint="#2196F3"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/testButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test Deteksi"
        android:textSize="16sp"
        android:padding="16dp"
        android:backgroundTint="#4CAF50"
        android:enabled="false" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fitur Proteksi:\n\n• Deteksi pesan scam otomatis\n• Peringatan real-time\n• Melindungi di WhatsApp dan SMS\n• Menggunakan AI untuk deteksi akurat"
        android:textSize="14sp"
        android:textColor="#757575"
        android:layout_marginTop="32dp"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="2dp" />

</LinearLayout>